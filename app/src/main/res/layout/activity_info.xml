<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lifeistech.android.techdragon.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/explainTextView"
            android:layout_width="match_parent"
            android:layout_height="406dp"
            android:layout_margin="2dp"
            android:layout_weight="2.00"
            android:background="@color/white"
            android:text="@string/explain"
            android:textSize="24sp" />

        <Button
            android:id="@+id/susumu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.12"
            android:background="@drawable/button_material"
            android:onClick="stageselect"
            android:text="STAGE SELECT" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.12"
            android:background="@drawable/button_kadomaru"
            android:onClick="back"
            android:text="戻る"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>
